@{
    ViewData["Title"] = "Login";
}

<div class="container py-5 text-center">
    <h2 class="mb-4">🔐 Staff Login</h2>

    <form asp-action="Index" method="post" class="w-50 mx-auto">
        <div class="mb-3">
            <input type="password" name="pin" class="form-control form-control-lg text-center" placeholder="Enter PIN" maxlength="4" required />
        </div>
        <button type="submit" class="btn btn-dark w-100">Login</button>
        @if (ViewBag.Error != null)
        {
            <div class="text-danger mt-3">@ViewBag.Error</div>
        }
    </form>
</div>
