@model POSystem.Models.Feedback

@{
    ViewData["Title"] = "Leave Feedback";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<div class="container py-5" style="max-width: 720px;">
    <div class="text-center mb-5">
        <h2 class="fw-bold display-6">💬 Help Us Improve</h2>
        <p class="text-muted lead">Your feedback makes us better. Just a few quick taps!</p>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success text-center shadow-sm">@ViewBag.Message</div>
    }

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-5">
            <form asp-action="Create" method="post">
                <input type="hidden" name="OrderId" value="@ViewBag.OrderId" />

                <!-- Overall Experience -->
                <div class="mb-4">
                    <label class="form-label fw-semibold fs-5">🌟 Overall Experience</label>
                    <div class="btn-group d-flex justify-content-center gap-2" role="group" aria-label="Overall Rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            var inputId = $"rating-overall-{i}";
                            <input type="radio" class="btn-check" name="Rating" id="@inputId" value="@i" required />
                            <label class="btn btn-outline-warning rounded-circle px-3 py-2" for="@inputId">
                                <i class="fas fa-star"></i> @i
                            </label>
                        }
                    </div>
                </div>

                <!-- Service Quality -->
                <div class="mb-4">
                    <label class="form-label fw-semibold fs-5">🧑‍🍳 Service Quality</label>
                    <div class="btn-group d-flex justify-content-center gap-2" role="group" aria-label="Service Rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            var inputId = $"service-rating-{i}";
                            <input type="radio" class="btn-check" name="Service" id="@inputId" value="@i" required />
                            <label class="btn btn-outline-success rounded-circle px-3 py-2" for="@inputId">
                                @i
                            </label>
                        }
                    </div>
                </div>

                <!-- Food Quality -->
                <div class="mb-4">
                    <label class="form-label fw-semibold fs-5">🍽️ Food Quality</label>
                    <div class="btn-group d-flex justify-content-center gap-2" role="group" aria-label="Food Rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            var inputId = $"food-rating-{i}";
                            <input type="radio" class="btn-check" name="Food" id="@inputId" value="@i" required />
                            <label class="btn btn-outline-primary rounded-circle px-3 py-2" for="@inputId">
                                @i
                            </label>
                        }
                    </div>
                </div>

                <!-- Comment -->
                <div class="mb-4">
                    <label asp-for="Comment" class="form-label fw-semibold fs-5">📝 Additional Comments <small class="text-muted">(optional)</small></label>
                    <textarea asp-for="Comment" class="form-control shadow-sm" rows="4" placeholder="Anything you'd like to tell us?"></textarea>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg shadow rounded-pill">Submit Feedback</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}